@model List<Sandogh.Application.Users.Query.GetUserAddress.UserAddressQuery>
@{
     Layout = "~/Views/Shared/_LayoutCustomerPanel.cshtml";
}
        <a class="btn btn-success mb-3" href="@Url.Action("AddNewAddress","Address")">ثبت آدرس جدید</a>
        <div class="card">
            <div class="card-header">
                <div class="card-title">لیست آدرس ها</div>
            </div>
            <div class="card-body">
                @foreach (var item in Model)
                {
                    <div class="row">
                        <div class="col-lg-12">
                            <ul>
                                <li>@item.City</li>
                                <li>@item.State</li>
                                <li>@item.PostalAddress</li>
                                <li>@item.ReciverName</li>

                            </ul>
                        </div>
                    </div>
                    <hr />
                }
            </div>
        </div>
