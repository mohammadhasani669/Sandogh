@model Sandogh.Application.Users.Command.Add.AddUserAddressCommand
@{
    ViewData["Title"] = "Home Page";
    Layout = "_LayoutInsidePages";
}


<div class="container my-5">
    <div class="row">
        <div class="col-lg-3">
            <ul class="list-group">
                <li class="list-group-item active">آدرس</li>
                <li class="list-group-item">سفارش ها</li>
                <li class="list-group-item">item1</li>
                <li class="list-group-item">item1</li>
                <li class="list-group-item">item1</li>
            </ul>
        </div>
        <div class="col-lg-9">

            <div class="card">
                <div class="card-header">
                    <div class="card-title">ثبت آدرس</div>
                </div>
                <div class="card-body">
                    <form asp-action="AddNewAddress" asp-controller="Address" method="post">
                        <div class="row">
                            <div class="col-lg-6 mb-1">
                                <fieldset>
                                    <div class="form-group">
                                        <input asp-for="City" class="form-control" placeholder="شهر" />
                                        <span asp-validation-for="City" class="text-danger"></span>
                                    </div>
                                </fieldset>
                            </div>
                            <div class="col-lg-6 mb-1">
                                <fieldset>
                                    <div class="form-group">
                                        <input asp-for="State" class="form-control" placeholder="استان" />
                                        <span asp-validation-for="State" class="text-danger"></span>

                                    </div>
                                </fieldset>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 mb-1">
                                <fieldset>
                                    <div class="form-group">
                                        <input asp-for="ZipCode" class="form-control" placeholder="کد پستی" />
                                        <span asp-validation-for="ZipCode" class="text-danger"></span>

                                    </div>
                                </fieldset>
                            </div>
                            <div class="col-lg-6 mb-1">
                                <fieldset>
                                    <div class="form-group">
                                        <input asp-for="ReciverName" class="form-control" placeholder="نام گیرنده" />
                                        <span asp-validation-for="ReciverName" class="text-danger"></span>

                                    </div>
                                </fieldset>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 mb-1">
                                <fieldset>
                                    <div class="form-group">
                                        <input asp-for="PostalAddress" class="form-control" placeholder="آدرس پستی" />
                                        <span asp-validation-for="PostalAddress" class="text-danger"></span>

                                    </div>
                                </fieldset>
                            </div>

                        </div>
                        <button class="btn btn-success">ثبت آدرس</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
 @{
     await Html.RenderPartialAsync("_ValidationScriptsPartial");
 }
}
